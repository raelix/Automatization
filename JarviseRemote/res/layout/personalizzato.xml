<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/iron">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/infoPersonalizzato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,5" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="90dp" >

                <TextView
                    android:id="@+id/personalizzatoText1"
                    android:text="@string/default1"
                    style="@style/textViewStyle" />

                <Button
                    android:id="@+id/pesonalizzato1On"
                    android:text="@string/On"
                    style="@style/buttonGreenViewStyle"  />

                <Button
                    android:id="@+id/pesonalizzato1Off"
                    android:text="@string/Off"
                    style="@style/buttonRedViewStyle"  />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/personalizzatoText2"
                    android:text="@string/default2"
                     style="@style/textViewStyle" />

                <Button
                    android:id="@+id/pesonalizzato2On"
                    android:text="@string/On" 
                    style="@style/buttonGreenViewStyle" />

                <Button
                    android:id="@+id/pesonalizzato2Off"
                    android:text="@string/Off"
                    style="@style/buttonRedViewStyle"  />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/personalizzatoText3"
                    android:text="@string/default3"
                    style="@style/textViewStyle" />

                <Button
                    android:id="@+id/pesonalizzato3On"
                    android:text="@string/On" 
                    style="@style/buttonGreenViewStyle" />

                <Button
                    android:id="@+id/pesonalizzato3Off"
                    android:text="@string/Off" 
                    style="@style/buttonRedViewStyle" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/personalizzatoText4"
                    android:text="@string/default4"
                    style="@style/textViewStyle"
                     />

                <Button
                    android:id="@+id/pesonalizzato4On"
                    android:layout_width="90dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/On"
                    android:background="@layout/acceso"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/pesonalizzato4Off"
                    android:layout_width="90dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/Off" 
                    android:background="@layout/spento"
                    android:textColor="@android:color/white"/>
            </TableRow>
            
            
        </TableLayout>
    </RelativeLayout>

</ScrollView>