<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/infoAvanzate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,5" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="90dp" >

                <TextView
                    android:id="@+id/UserTesto"
                    android:text="@string/nome"
					style="@style/textViewStyle" />

                <EditText
                    android:id="@+id/UserValore"
                     style="@style/editTextStyle" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/testoPassword"
                    android:text="@string/password"
					style="@style/textViewStyle"/>

                <EditText
                    android:id="@+id/passwordValore"
                     style="@style/editTextStyle"  >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/testoHost"
					style="@style/textViewStyle"
                    android:text="@string/host" />

                <EditText
                    android:id="@+id/hostValore"
                     style="@style/editTextStyle"  >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/default1"
                    android:text="@string/default1"
					style="@style/textViewStyle" />

                <EditText
                    android:id="@+id/default1Value"
                    style="@style/editTextStyle" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/default2"
                    android:text="@string/default2"
					style="@style/textViewStyle" />

                <EditText
                    android:id="@+id/default2Value"
                     style="@style/editTextStyle" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/default3"
                    android:text="@string/default3"
					style="@style/textViewStyle" />

                <EditText
                    android:id="@+id/default3Value"
                   style="@style/editTextStyle"  >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <TextView
                    android:id="@+id/default4"
                    android:text="@string/default4"
                    style="@style/textViewStyle"/>

                <EditText
                    android:id="@+id/default4Value"
                   style="@style/editTextStyle" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp" >

                <Button
                    android:id="@+id/Salva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Salva" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>